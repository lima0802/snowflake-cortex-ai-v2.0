# ============================================================================
# Production Environment Configuration
# ============================================================================
# This file contains environment-specific settings for the PROD environment
# Copy this to .env.prod and fill in your actual values
# NEVER commit actual credentials to git!
# ============================================================================

# Environment
ENV=prod
BUILD_TARGET=production

# Ports
ORCHESTRATOR_PORT=8000
WEB_APP_PORT=8501

# Volume Mounts (disabled in prod - use baked-in code)
ORCHESTRATOR_VOLUMES=
WEB_APP_VOLUMES=

# Resource Limits (production-grade)
ORCHESTRATOR_CPU_LIMIT=4.0
ORCHESTRATOR_MEM_LIMIT=4G
ORCHESTRATOR_CPU_RES=1.0
ORCHESTRATOR_MEM_RES=1G

WEB_APP_CPU_LIMIT=2.0
WEB_APP_MEM_LIMIT=2G
WEB_APP_CPU_RES=0.5
WEB_APP_MEM_RES=512M

# Snowflake Configuration - PROD
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_prod_user
SNOWFLAKE_PASSWORD=your_prod_password
SNOWFLAKE_WAREHOUSE=PROD_WH
SNOWFLAKE_DATABASE=PROD_MARCOM_DB
SNOWFLAKE_SCHEMA=APP_DIRECTMARKETING
SNOWFLAKE_ROLE=PROD_ROLE

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_HOT_RELOAD=false
