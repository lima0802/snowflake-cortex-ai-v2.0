# ============================================================================
# Development Environment Configuration
# ============================================================================
# This file contains environment-specific settings for the DEV environment
# Copy this to .env.dev and fill in your actual values
# ============================================================================

# Environment
ENV=dev
BUILD_TARGET=development

# Ports
ORCHESTRATOR_PORT=8000
WEB_APP_PORT=8501

# Volume Mounts (enable hot-reload in dev)
ORCHESTRATOR_VOLUMES=./orchestrator:/app
WEB_APP_VOLUMES=./web-app:/app

# Resource Limits (lighter for dev)
ORCHESTRATOR_CPU_LIMIT=1.0
ORCHESTRATOR_MEM_LIMIT=1G
ORCHESTRATOR_CPU_RES=0.25
ORCHESTRATOR_MEM_RES=256M

WEB_APP_CPU_LIMIT=0.5
WEB_APP_MEM_LIMIT=512M
WEB_APP_CPU_RES=0.1
WEB_APP_MEM_RES=128M

# Snowflake Configuration - DEV
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_dev_user
SNOWFLAKE_PASSWORD=your_dev_password
SNOWFLAKE_WAREHOUSE=DEV_WH
SNOWFLAKE_DATABASE=DEV_MARCOM_DB
SNOWFLAKE_SCHEMA=APP_DIRECTMARKETING
SNOWFLAKE_ROLE=DEV_ROLE

# Logging
LOG_LEVEL=DEBUG

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
